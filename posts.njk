---
layout: layouts/base.njk
pagination:
    data: collections.posts
    size: 3
    reverse: true
    alias: postlist
---
<h1>Blog</h1>

<ul>
{% for post in postlist %}
  <li><a class="post__url" href="{{ post.url | url }}"><h2 class="the__title">{{ post.data.title }}</h2></a>
  <h5 class="when__posted">Posted on <span class="why__me">{{ post.date | readableDate }}</span> - by Charli</h5>
  <article class="the__post">{{ post.templateContent | safe }}</article></li>
{% endfor %}
</ul>

{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">&lt;&lt; Older Posts</a>{% endif %}
{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Newer Posts &gt;&gt;</a>{% endif %}